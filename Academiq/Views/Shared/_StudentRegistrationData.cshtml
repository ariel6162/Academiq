@model Academiq.Models.Registration
@{
    var status = Model.Status.HasValue ? ((Academiq.Models.RegistrationStatus)Model.Status.Value).ToString() : "";
}

<div class="registration-data">
    <h2>Registration Data</h2>
    <h3>Status:</h3>
    <p>@status</p>

    <h3>Courses:</h3>
    <ul>
        @foreach (var course in Model?.Course)
        {
            <li>@course.Name (Instructor: @course.Lecturer.FirstName @course.Lecturer.LastName)</li>
        }
    </ul>
</div>
